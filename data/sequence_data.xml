<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Secuencia para Caja Chica -->
        <record id="sequence_petty_cash" model="ir.sequence">
            <field name="name">Secuencia Caja Chica</field>
            <field name="code">petty.cash</field>
            <field name="prefix">CAJA/%(year)s/</field>
            <field name="suffix"></field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">True</field>
            <field name="company_id" eval="False" />
        </record>
        <!-- Secuencia para Caja de Distribución -->
        <record id="sequence_distribution_cash" model="ir.sequence">
            <field name="name">Secuencia Caja de Distribución</field>
            <field name="code">distribution.cash</field>
            <field name="prefix">DIST/%(year)s/</field>
            <field name="suffix"></field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">True</field>
            <field name="company_id" eval="False" />
        </record>

        <!-- Secuencia para Caja de Logística -->
        <record id="sequence_logistics_cash" model="ir.sequence">
            <field name="name">Secuencia Caja de Logística</field>
            <field name="code">logistics.cash</field>
            <field name="prefix">LOG/%(year)s/</field>
            <field name="suffix"></field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">True</field>
            <field name="company_id" eval="False" />
        </record>

        <!-- Secuencia para Recibos de Constancia -->
        <record id="sequence_cash_receipt" model="ir.sequence">
            <field name="name">Secuencia Recibos de Constancia</field>
            <field name="code">cash.receipt</field>
            <field name="prefix">RECIBO/%(year)s/</field>
            <field name="suffix"></field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">True</field>
            <field name="company_id" eval="False" />
        </record>
    </data>
</odoo>