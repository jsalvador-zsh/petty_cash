<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Acción principal para Caja de Distribución -->
        <record id="action_distribution_cash" model="ir.actions.act_window">
            <field name="name">Caja de Distribución</field>
            <field name="res_model">distribution.cash</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{
                'default_state': 'draft',
                'search_default_my_cajas': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primera Caja de Distribución!
                </p>
                <p>
                    Las Cajas de Distribución te permiten llevar un control detallado de gastos
                    de logística, distribución y transporte de manera organizada y profesional.
                </p>
            </field>
        </record>

        <!-- Acción para movimientos de Caja de Distribución -->
        <record id="action_distribution_cash_line" model="ir.actions.act_window">
            <field name="name">Movimientos de Caja de Distribución</field>
            <field name="res_model">distribution.cash.line</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay movimientos de distribución registrados
                </p>
                <p>
                    Los movimientos se crean desde las Cajas de Distribución correspondientes.
                </p>
            </field>
        </record>

        <!-- Submenús para Caja de Distribución -->
        <menuitem id="menu_distribution_cash_root" 
                  name="Caja de Distribución" 
                  parent="menu_petty_cash_main" 
                  sequence="20"/>

        <menuitem id="menu_distribution_cash_cajas" 
                  name="Mis Cajas de Distribución" 
                  parent="menu_distribution_cash_root" 
                  sequence="10"
                  action="action_distribution_cash"/>

        <menuitem id="menu_distribution_cash_all" 
                  name="Todas las Cajas de Distribución" 
                  parent="menu_distribution_cash_root" 
                  sequence="20"
                  action="action_distribution_cash"
                  groups="account.group_account_manager"/>

        <menuitem id="menu_distribution_cash_movements" 
                  name="Movimientos de Distribución" 
                  parent="menu_distribution_cash_root" 
                  sequence="30"
                  action="action_distribution_cash_line"/>

        <!-- Acción para crear nueva caja de distribución desde el menú -->
        <record id="action_distribution_cash_new" model="ir.actions.act_window">
            <field name="name">Nueva Caja de Distribución</field>
            <field name="res_model">distribution.cash</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{
                'default_state': 'draft',
            }</field>
        </record>

        <menuitem id="menu_distribution_cash_new" 
                  name="Crear Nueva Caja de Distribución" 
                  parent="menu_distribution_cash_root" 
                  sequence="5"
                  action="action_distribution_cash_new"/>

        <!-- Acción para cajas de distribución abiertas -->
        <record id="action_distribution_cash_open" model="ir.actions.act_window">
            <field name="name">Cajas de Distribución Abiertas</field>
            <field name="res_model">distribution.cash</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('state', '=', 'open')]</field>
            <field name="context">{
                'search_default_open': 1,
            }</field>
        </record>

        <menuitem id="menu_distribution_cash_open" 
                  name="Cajas de Distribución Abiertas" 
                  parent="menu_petty_cash_reports" 
                  sequence="30"
                  action="action_distribution_cash_open"/>

        <!-- Acción para resumen mensual de distribución -->
        <record id="action_distribution_cash_monthly" model="ir.actions.act_window">
            <field name="name">Resumen Mensual Distribución</field>
            <field name="res_model">distribution.cash</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('date', '>=', (context_today().strftime('%Y-%m-01')))]</field>
            <field name="context">{'search_default_group_by_responsible_id': 1}</field>
        </record>

        <menuitem id="menu_distribution_cash_monthly"
                  name="Resumen Mensual Distribución"
                  parent="menu_petty_cash_reports"
                  sequence="40"
                  action="action_distribution_cash_monthly"/>

        <!-- Reportes específicos de distribución -->
        <menuitem id="menu_distribution_cash_reports" 
                  name="Reportes de Distribución" 
                  parent="menu_petty_cash_reports" 
                  sequence="50"/>

        <!-- Configuración específica de distribución -->
        <menuitem id="menu_distribution_cash_config" 
                  name="Configuración Distribución" 
                  parent="menu_petty_cash_config" 
                  sequence="20"
                  groups="account.group_account_manager"/>

    </data>
</odoo>